<%= form_with(model: task, local:true) do |f| %>
    <%# エラーメッセージ を表示させる%>
    <% if task.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% task.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <ul>
      <li><%= f.label :content, 'タスク' %><%= f.text_field :content %></li>
      <li><%= f.label :status, 'ステータス' %><%= f.text_field :status %></li>
    <%= f.submit '編集完了' %>
    </ul>
<% end %>