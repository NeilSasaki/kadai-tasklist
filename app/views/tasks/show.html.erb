<h1><%= current_user.name %>さんのタスク<%= @task.id %>の詳細</h1>
<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>タスク</th>
            <th>ステータス</th>
            <th>登録日時</th>
            <th>編集</th>
            <th>削除</th>
      </tr>
    </thead>
    <tbody>
        <tr>
            <th><%= @task.content %></th>
            <th><%= @task.status %></th>
            <th><%= @task.created_at %></th>
            <th><%= link_to '編集',edit_task_path(@task) %></th>
            <% if current_user == @task.user %>
            <th><%= link_to "Delete", @task, method: :delete, data: {confirm:"You sure?" }, class: 'btn' %></th>
            <% end %>
        </tr>
</table>
<ul>
    <li><%= link_to '新規タスクの投稿', new_task_path %></li>
    <li><%#= link_to '一覧に戻る', tasks_path %></li>
    <li><%= link_to 'Logout', logout_path, method: :delete %></li>
</ul>    


